<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout du widget Heures de Prière pour Android
  Placer dans: android/app/src/main/res/layout/
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heures de Prière"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Prochaine prière -->
    <LinearLayout
        android:id="@+id/next_prayer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFA50020"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/next_prayer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prochaine prière"
            android:textColor="#CCCCCC"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhuhr"
                android:textColor="#FFA500"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/next_prayer_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:45"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="end" />

            <TextView
                android:id="@+id/next_prayer_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dans 2h 15m"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Liste des prières -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fajr -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/prayer_fajr_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fajr"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/prayer_fajr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:30"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Dhuhr -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/prayer_dhuhr_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dhuhr"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/prayer_dhuhr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:45"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Asr -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/prayer_asr_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asr"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/prayer_asr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:20"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/prayer_maghrib_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maghrib"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/prayer_maghrib_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:10"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Isha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:id="@+id/prayer_isha_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Isha"
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/prayer_isha_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:30"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>








